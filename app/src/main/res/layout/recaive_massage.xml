<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:gravity="end"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_messageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:textAppearance="@style/MyTextFont"
        android:layout_gravity="end"
        android:textSize="11sp"
        android:text="23/9/2022 - 13:50"
        android:textColor="#000000" />
    <LinearLayout
        android:id="@+id/reseiceLinear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@drawable/recive_chat"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvReseiceMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="المستقبل"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="@style/MyTextFont"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgReseiceImage"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_avatar"
        android:visibility="gone" />


</LinearLayout>
